<h1>All Tasks</h1>

<ul>
  <% @tasks.each do |task| %>
  <li><%= link_to task.title, task_path(task.id) %>
    <%= link_to "(update ", edit_task_path(task.id) %>
    <%= link_to "| delete)", task_path(task.id), method: :delete %>
  </li>
  <% end %>
</ul>

<%= link_to "add a new task", new_task_path() %>
